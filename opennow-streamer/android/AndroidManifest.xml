<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.opennow.streamer"
          android:versionCode="1"
          android:versionName="0.3.0">

    <!-- Minimum Android 10 (API 29) for AHardwareBuffer support -->
    <uses-sdk
            android:minSdkVersion="29"
            android:targetSdkVersion="34" />

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- OpenGL ES 3.0 required for Vulkan -->
    <uses-feature
            android:glEsVersion="0x00030000"
            android:required="true" />

    <!-- Gamepad support (optional) -->
    <uses-feature
            android:name="android.hardware.gamepad"
            android:required="false" />

    <application
            android:allowBackup="true"
            android:label="OpenNOW"
            android:icon="@mipmap/ic_launcher"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            android:hardwareAccelerated="true">

        <activity
                android:name="android.app.NativeActivity"
                android:label="OpenNOW"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:exported="true"
                android:launchMode="singleTask"
                android:screenOrientation="landscape">

            <!-- Native library name (without lib prefix and .so suffix) -->
            <meta-data
                    android:name="android.app.lib_name"
                    android:value="opennow_streamer" />

            <!-- Intent filter for launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent filter for Android TV (leanback launcher) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>